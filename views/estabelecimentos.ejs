<%- include layouts/header.ejs %>

            <div class="page-header"><h2>Cadastro de Estabelecimentos</h2></div> <!-- <%=page_title%> -->
            <div class="page-container">

        <div class="page-data">
         <div class="data-btn">
           <button onClick="addEstabelecimento();">Adicionar Estabelecimento</button>
         </div>
         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>Nome</th>
                    <th>Endereço</th>
                    <th>Número</th>
                    <th>Cep</th>
                    <th>Bairro</th>
                    <th>Cidade</th>
                    <th>Estado</th>
                    <th>Telefone</th>

                    <th width="auto"></th>
                </tr>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=data[i].nome%></td>
                    <td><%=data[i].endereco%></td>
                    <td><%=data[i].numero%></td>
                    <td><%=data[i].cep%></td>
                    <td><%=data[i].bairro%></td>
                    <td><%=data[i].cidade%></td>
                    <td><%=data[i].estado%></td>
                    <td><%=data[i].telefone%></td>
                    <td>
                        <a class="a-inside edit" href="../estabelecimentos/edit/<%=data[i].id%>">Editar</a>
                        <a class="a-inside delete" href="../estabelecimentos/delete/<%=data[i].id%>">Remover</a>
                       
                    </td>
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="3">No user</td>
                 </tr>
            <% } %>
                
                              
                
            </table>
         </div>
        </div>
        
<%- include layouts/footer.ejs %>
